<view class="mainBox">
    <view class="fixBox">
        <view class="searchBox">
            <view class="search">
                <icon type='search' class='search-img' size='15' color='#c8c8c8'></icon>
                <input class="inputBox" bindconfirm="search" bindinput="watchInput" value="{{inputMode.inputValue}}" confirm-type="search" focus="{{inputMode.inputFocus}}" placeholder="将会获取焦点" />
                <icon wx:if="{{clearShow}}" type='clear' class='clear-img' size='15' color='#c8c8c8'></icon>
            </view>
            <view catchtap="toIndex" class="text">取消</view>
        </view>
    </view>
