        <!-- 搜索结果列表 -->
        <view class="listBox" hover-class="none" hover-stop-propagation="false">
            <view class="resultList">
                <block wx:for="{{list}}" wx:key="{{index}}">
                    <view class="circleBox" hover-class="none" hover-stop-propagation="false">
                        <view class="collect iconfontIndex icon-icon"></view>
                        <view class="imageBox">
                            <image class="img" src="../../../assets/image/indexIcon/9.jpg" />
                        </view>
                        <view class="textBox">
                            <text class="name">{{item.name}}</text>
                            <text class="author">{{item.author}}</text>
                            <text class="summary">简介</text>
                            <view class="summary">{{item.introduction}}</view>
                        </view>
                    </view>
                </block>
            </view>
        </view>
    </view>
